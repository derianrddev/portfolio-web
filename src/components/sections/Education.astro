---
import { education } from "@cv";
import Section from "@/components/Section.astro";
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ institution, url, startDate, endDate, title }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual"
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <article>
              <header>
                <div>
                  <a href={url} title={`Ver ${institution}`} target="_blank">
                        {institution}
                      </a>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{title}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #fff;
  }

  article a {
    color: #fff;
  }

  article a:hover {
    text-decoration: underline;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 4px;
  }

  time {
    color: #9ca3af;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>